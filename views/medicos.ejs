<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/medicos.css">
    <title>Médicos</title>
</head>
<body>
    <h1>Médicos</h1>
    <a href="/medicos/novo">Cadastrar médico</a>
    <a href="/painel">Retornar</a>
    <table>
        <tr>
        <th>Nome</th>
        <th>CRM</th>
        <th>Especialidade</th>
        <th>Telefone</th>
        <th>Email</th>
        <th>Ações</th>
        </tr>
        <% medicos.forEach(medico => { %>
        <tr>
            <td><%= medico.Nome %></td>
            <td><%= medico.CRM %></td>
            <td><%= medico.Especialidade %></td>
            <td><%= medico.Telefone %></td>
            <td><%= medico.Email %></td>
            <td>
                <a href="#" class="edit-btn"
                   data-id="<%= medico.id || medico.Id || '' %>"
                   data-nome="<%= medico.Nome %>"
                   data-crm="<%= medico.CRM %>"
                   data-especialidade="<%= medico.Especialidade %>"
                   data-telefone="<%= medico.Telefone %>"
                   data-email="<%= medico.Email %>">Editar</a>
                <a href="/medicos/remover/<%= medico.id || medico.Id || '' %>" class="remove-btn">Remover</a>
            </td>
        </tr>
        <% }) %>
    </table>
    
        <!-- Modal de edição (mesmo comportamento do pacientes) -->
        <div id="editModal" class="modal" aria-hidden="true" style="display:none;">
            <div class="modal-overlay"></div>
            <div class="modal-box">
                <h2>Editar Médico</h2>
                <form id="editForm" method="POST" action="">
                    <label>Nome<br>
                        <input type="text" name="nome" id="modal-nome" required>
                    </label>
                    <label>CRM<br>
                        <input type="text" name="crm" id="modal-crm" required>
                    </label>
                    <label>Especialidade<br>
                        <input type="text" name="especialidade" id="modal-especialidade">
                    </label>
                    <label>Telefone<br>
                        <input type="text" name="telefone" id="modal-telefone">
                    </label>
                    <label>Email<br>
                        <input type="email" name="email" id="modal-email">
                    </label>

                    <div class="modal-actions">
                        <button type="button" id="modal-cancel" class="btn">Cancelar</button>
                        <button type="submit" class="btn primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>

        <script>
            (function(){
                function qs(sel, ctx){ return (ctx||document).querySelector(sel); }
                function qsa(sel, ctx){ return Array.from((ctx||document).querySelectorAll(sel)); }

                var modal = qs('#editModal');
                var form = qs('#editForm');
                var cancel = qs('#modal-cancel');

                qsa('.edit-btn').forEach(function(btn){
                    btn.addEventListener('click', function(e){
                        e.preventDefault();
                        var id = btn.dataset.id || '';
                        var nome = btn.dataset.nome || '';
                        var crm = btn.dataset.crm || '';
                        var especialidade = btn.dataset.especialidade || '';
                        var telefone = btn.dataset.telefone || '';
                        var email = btn.dataset.email || '';

                        // preencher o formulário do modal
                        qs('#modal-nome').value = nome;
                        qs('#modal-crm').value = crm;
                        qs('#modal-especialidade').value = especialidade;
                        qs('#modal-telefone').value = telefone;
                        qs('#modal-email').value = email;

                        // ajustar ação do form
                        form.action = '/medicos/editar/' + encodeURIComponent(id);

                        // mostrar modal (usar flex para centralizar)
                        modal.style.display = 'flex';
                        modal.setAttribute('aria-hidden','false');
                    });
                });

                function closeModal(){
                    modal.style.display = 'none';
                    modal.setAttribute('aria-hidden','true');
                }

                cancel.addEventListener('click', function(){ closeModal(); });
                qs('.modal-overlay').addEventListener('click', closeModal);
                document.addEventListener('keydown', function(e){ if(e.key === 'Escape') closeModal(); });

                // confirmação de remoção
                qsa('.remove-btn').forEach(function(link){
                    link.addEventListener('click', function(e){
                        var ok = confirm('Tem certeza que deseja remover este médico?');
                        if(!ok) e.preventDefault();
                    });
                });
            })();
        </script>
</body>
</html>