<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/adicionar.css">
  <title>Nova Consulta</title>
</head>
<body>
  <div class="container">
    <h1>Nova Consulta</h1>
    <form action="/consultas/novo" method="POST">
      <div class="form-group">
        <label for="paciente_id">Paciente<br>
          <select name="paciente_id" id="paciente_id" required>
            <option value="">Selecione um paciente</option>
            <% pacientes.forEach(function(paciente) { %>
              <option value="<%= paciente.id %>"><%= paciente.nome %></option>
            <% }); %>
          </select>
        </label>
      </div>

      <div class="form-group">
        <label for="medico_id">Médico<br>
          <select name="medico_id" id="medico_id" required>
            <option value="">Selecione um médico</option>
            <% medicos.forEach(function(medico) { %>
              <option value="<%= medico.id %>"><%= medico.nome %></option>
            <% }); %>
          </select>
        </label>
      </div>

      <div class="form-group">
        <label for="data_consulta">Data da Consulta<br>
          <input id="data_consulta" name="data_consulta" type="datetime-local" required>
        </label>
      </div>

      <div class="form-group">
        <label for="observacoes">Observações<br>
          <textarea id="observacoes" name="observacoes" rows="3"></textarea>
        </label>
      </div>

      <div class="form-group">
        <label for="status">Status<br>
          <select name="status" id="status" required>
            <option value="Agendada">Agendada</option>
            <option value="Confirmada">Confirmada</option>
            <option value="Cancelada">Cancelada</option>
            <option value="Realizada">Realizada</option>
          </select>
        </label>
      </div>

      <div class="form-actions" style="margin-top:1rem">
        <button class="btn primary" type="submit">Salvar</button>
        <a class="btn ghost" href="/consultas">Cancelar</a>
      </div>
    </form>
  </div>
</body>
</html>
